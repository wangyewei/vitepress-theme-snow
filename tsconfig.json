{
  // "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "vitepress-theme-yev": ["src/index.ts"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist/types/",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsxImportSource": "vue",
    "verbatimModuleSyntax": false,
    "noImplicitAny": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
