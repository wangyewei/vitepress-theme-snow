{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsxImportSource": "vue",
    "verbatimModuleSyntax": false,
    "noImplicitAny": true,
    "declaration": true,
    "types": ["vite/client"],
    "declarationDir": "types-temp"
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "*.d.ts",
    "./shim.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
